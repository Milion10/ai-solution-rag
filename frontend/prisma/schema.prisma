// Schema Prisma pour AI Solution MVP
// Inspiré d'Achromatic mais simplifié pour le besoin spécifique

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ===== ENUMS =====

enum Role {
  ADMIN  @map("admin")
  MEMBER @map("member")
}

enum DocumentScope {
  ORGANIZATION @map("organization") // Documents globaux (admin seul modifie)
  USER         @map("user")         // Documents personnels (user propriétaire seul modifie)
}

// ===== AUTH MODELS =====

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime? @map("email_verified")
  password      String? // Hashed password for credentials login
  image         String?
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  // Relations
  accounts      Account[]
  sessions      Session[]
  memberships   Membership[]
  documents     Document[] // Documents personnels ET globaux
  conversations Conversation[]

  @@map("users")
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
  @@map("verification_tokens")
}

// ===== ORGANIZATIONS =====

model Organization {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique // URL-friendly identifier
  email     String?
  logo      String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  memberships Membership[]
  documents   Document[]

  @@map("organizations")
}

model Membership {
  id             String   @id @default(cuid())
  userId         String   @map("user_id")
  organizationId String   @map("organization_id")
  role           Role     @default(MEMBER)
  isOwner        Boolean  @default(false) @map("is_owner") // Owner = créateur organisation
  createdAt      DateTime @default(now()) @map("created_at")

  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([userId, organizationId])
  @@map("memberships")
}

// ===== DOCUMENTS =====

// Table documents unifiée (utilisée par backend Python et frontend)
// Correspond à la table créée par backend/migrations/add_backend_tables.sql
model Document {
  id              String   @id @default(uuid()) @db.Uuid
  filename        String   @db.VarChar(255)
  fileType        String   @map("file_type") @db.VarChar(50)
  fileSize        Int      @map("file_size")
  filePath        String   @map("file_path") @db.Text
  scope           String   @db.VarChar(50) @default("user")
  userId          String?  @map("user_id")
  organizationId  String?  @map("organization_id")
  conversationId  String?  @map("conversation_id") // Document lié à une conversation spécifique
  uploadedAt      DateTime @default(now()) @map("uploaded_at")
  isIndexed       Boolean  @default(false) @map("is_indexed")
  indexingStatus  String   @default("pending") @map("indexing_status") @db.VarChar(50)
  createdAt       DateTime @default(now()) @map("created_at")

  // Relations optionnelles
  user         User?         @relation(fields: [userId], references: [id], onDelete: SetNull)
  organization Organization? @relation(fields: [organizationId], references: [id], onDelete: SetNull)
  conversation Conversation? @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@map("documents")
}

// ===== CONVERSATIONS =====

model Conversation {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  title     String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages  Message[]
  documents Document[] // Documents attachés à cette conversation

  @@map("conversations")
}

model Message {
  id             String   @id @default(cuid())
  conversationId String   @map("conversation_id")
  role           String // "user" or "assistant"
  content        String   @db.Text
  attachments    String? // Fichiers joints au message (JSON array de noms de fichiers)
  sources        String? // Sources citées par l'IA (JSON stringified)
  confidence     Float? // Score de confiance
  createdAt      DateTime @default(now()) @map("created_at")

  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@map("messages")
}
